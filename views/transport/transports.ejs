<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<script src="/js/transports.js"></script>

</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <div class="container">
    <div class="transports-container">
      <table class="table transports-table">
        <div class="table-wrapper">
            <!-- TODO ADD PAGINATION FOR DAYS -->
            <h3 class="text-center"><%= days[d.getDay()] %>, <%= d.getDate() %>.<%= d.getMonth() %>.<%= d.getFullYear() %></h3>
              <thead class="thead">
                <tr>
                  <!-- <th scope="col">#</th> -->
                  <th scope="col">Поаѓање од:</th>
                  <th scope="col">Пристигнување во:</th>
                  <th scope="col">Час</th>
                  <th scope="col">Цена</th>
                </tr>
              </thead>
            <tbody>
              <% transports.forEach(t=> { %>
                 
                    <tr data-href="/transports/<%= t._id%>">
                      <!-- <th scope="row">1</th> -->
                      <td><%= t.from %></td>
                      <td><%= t.to %></td>
                      <td><%= t.date %></td>
                      <td><%= t.price %> ден.</td>
                    </tr>
                  
              <% }) %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
<%- include('../includes/end.ejs') %>