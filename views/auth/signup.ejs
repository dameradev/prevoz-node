<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <div class="container">
    <div class="signup-wrapper text-center">
      <h1>Регистрација</h1>
      <% if (errorMessage) { %>
        <div class="error-message">
          <p><%= errorMessage %></p>
        </div>
      <% } %>
      <form action="/signup" method="POST">
        <div class="form-group">
          <label for="email">Е-маил:</label>
          <input class="form-control" type="email" name="email" id="email">
        </div>

        <div class="form-group">
          <label for="name">Корисничко име:</label>
          <input class="form-control" type="text" name="name" id="name">
        </div>

        <div class="form-group">
          <label for="passowrd">Лозинка:</label>
          <input class="form-control" type="password" name="password" id="password">
        </div>

        <div class="form-group">
          <label for="confirmPassword">Потврдете лозинка:</label>
          <input class="form-control" type="password" name="confirmPassword" id="confirmPassword">
        </div>
        <button class="btn btn-info" type="submit">Регистрација</button>
      </form>
    </div>
  </div>
<%- include('../includes/end.ejs') %>